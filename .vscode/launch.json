    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'customasm'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=customasm",
                    "--package=customasm"
                ],
                "filter": {
                    "name": "customasm",
                    "kind": "bin"
                }
            },
            "args": [
                    "-f",
                    "annotated",
                    "-o",
                    "${workspaceFolder}/run/test.bin",
                    "${workspaceFolder}/run/test.asm"

            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in 'customasm'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run"
                ],
                "filter": {
                    "name": "customasm",
                    "kind": "lib"
                }
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}